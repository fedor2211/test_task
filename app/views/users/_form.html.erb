<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :patronymic, "Patronymic" %>
    <%= form.text_field :patronymic %>
  </div>
    <%= form.label :surname, "Surname" %>
    <%= form.text_field :surname %>
  <div>
    <%= form.label :email, "Email" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :age, "Age" %>
    <%= form.number_field :age %>
  </div>
  <div>
    <%= form.label :nationality, "Nationality" %>
    <%= form.text_field :nationality %>
  </div>
  <div>
    <%= form.label :country, "Country" %>
    <%= form.text_field :country %>
  </div>
  <div>
    <%= form.label :gender, "Gender" %>
    <%= form.select :gender, User.genders.to_a %>
  </div>

  <% if user.persisted? %>
    <div>
        <% form.label :interests, "Interests" %>
        <%= form.collection_select :interests, Interest.all, :id, :name, {selected: user.interests}, multiple: true %>
    </div>
    <div>
        <% form.label :skills, "Skills" %>
        <%= form.collection_select :skills, Skill.all, :id, :name, {selected: user.skills}, multiple: true %>
    </div>
  <% else %>
    <div>
        <% form.label :interests, "Interests" %>
        <%= form.collection_select :interests, Interest.all, :id, :name, multiple: true %>
    </div>
    <div>
        <% form.label :skills, "Skills" %>
        <%= form.collection_select :skills, Skill.all, :id, :name, multiple: true %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
